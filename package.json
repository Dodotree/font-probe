{
  "name": "font-probe",
  "version": "0.1.5",
  "description": "Browser font availability probe using canvas typography signatures.",
  "type": "module",
  "main": "./dist/font-probe.js",
  "module": "./dist/font-probe.js",
  "unpkg": "./dist/font-probe.min.js",
  "jsdelivr": "./dist/font-probe.min.js",
  "types": "./dist/font-probe.d.ts",
  "exports": {
    ".": {
      "types": "./dist/font-probe.d.ts",
      "import": "./dist/font-probe.js"
    },
    "./browser": "./dist/font-probe.min.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:browser",
    "build:types": "tsc -p tsconfig.json",
    "build:browser": "esbuild font-probe.ts --bundle --minify --format=iife --platform=browser --global-name=FontProbeLib --outfile=dist/font-probe.min.js",
    "check": "tsc -p tsconfig.json --noEmit",
    "example": "npm run build && npx --yes http-server . -c-1",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "font",
    "font-detection",
    "canvas",
    "typography",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.27.3",
    "typescript": "^5.9.2"
  }
}
